<!-- navbar -->
{{> _adminNav}}
<!-- end of navbar -->
<!-- cards -->

<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
        <div class="row pt-md-5 mt-md-3 mb-5">
          <div class="col-xl-4 col-sm-6 p-2">
            <div class="card card-common">
              <div class="card-body">
                <div class="d-flex justify-content-between">
                  <i class="fas fa-user fa-3x text-danger"></i>
                  <div class="text-right text-secondary">
                    <h5>Patients</h5>
                    <h3>{{userCount.length}}</h3>
                  </div>
                </div>
              </div>
              <a href="{{userName}}/patientTable" style="text-decoration: none">
                <div class="card-footer text-secondary">
                  <i class="far fa-eye mr-3"></i>
                  <span>View Now</span>
                </div></a>
              </div>
            </div>
            <div class="col-xl-4 col-sm-6 p-2">
              <div class="card card-common">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <i class="fas fa-user-md fa-3x text-primary"></i>
                    <div class="text-right text-secondary">
                      <h5>Doctors</h5>
                      <h3>{{docCount.length}}</h3>
                    </div>
                  </div>
                </div>
                <a href="{{userName}}/doctorTable" style="text-decoration: none">
                  <div class="card-footer text-secondary">
                    <i class="far fa-eye mr-3"></i>
                    <span>View Now</span>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- end of cards -->

  <!-- tables -->
  <section>
    <div class="container-fluid">
      <div class="row mb-5">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto ">
          <div class="row justify-content-center">
            <div class="col-xl-10 col-10 mb-4 mb-xl-0">
              <h3 class="text-muted text-center mb-3 general-Title7">Users</h3>
              <table id = 'all-users-table' class="table text-center table-striped">
                <thead class='thead-dark'>
                  <tr class="text-muted">

                    <th>User Name</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each users}}

                  <tr>

                    <td>{{userName}}</td>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{role}}</td>
                    {{!-- <td>
                    <a href="viewPatient.html">
                    <button type="button" class="btn btn-primary">View</button></a>
                    <a href="admin.html">
                    <button type="button" class="btn btn-danger">Delete</button></a>
                  </td> --}}
                </tr>
                {{else}}<p class="text-muted general-Title3">NO Users to Show</p>

                {{/each}}

              </tbody>
            </table>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- end of tables -->
<script>
$(document).ready(function() {
    $('#all-users-table').DataTable( {
        "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
        "pageLength": 5
    } );
} );
</script>
