<!--  Patient Profile -->
<section>
  <div class="container-fluid">
    <div class="row flex justify-content-center">
      <div class="col-xl-10 col-lg-9 col-md-8 ml-auto mt-4">
        <div class="pt-md-5 mt-md-3 mb-5 col-xl-10">

          {{#each notificationAll}}
          <div class="notification-wrapper mt-2">
            <div class="notification-item">
              <div class="row d-flex">
                <div class="col-3 col-md-3 col-lg-3">
                  <img src="/images/{{category}}.png"  width="50" height="50" class="rounded-circle">
                </div>
                <div class="col-9 col-md-9 col-lg-9 mt-1">
                  <div class="notification-title-main">
                      {{title}}
                  </div>
                  <div class="notification-details-main">
                      {{description}}
                  </div>
                  <div class='notification-date float-right text-secondary'>
                    {{@root.timeDiff time}}
                  </div>
              </div>
              </div>
            </div>
          </div>
          {{/each}}

        </div>
      </div>
    </div>
  </div>
</section>
