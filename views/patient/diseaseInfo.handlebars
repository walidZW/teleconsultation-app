<!-- start of navbar -->
{{> _patientNav}}
<!-- end of navbar -->


<section>
  <div class="container-fluid">
    <div class="row flex justify-content-center">
      <div class="col-xl-10 col-lg-9 col-md-8 ml-auto mt-4">
        <div class="pt-md-5 mt-md-3 mb-5 col-xl-12">
          {{> _message}}

          <div class="col-12 text-left">
            <h3 class="text-info font-weight-bold">{{info.diseaseName}}</h3>
            <hr>
            <h5 class="font-weight-bold">Overview</h5>
            <p>{{info.overview}}</p>
            <h5 class="font-weight-bold">Symptoms</h5>
            <p>Symptoms of {{info.diseaseName}} may include:</p>
            <ul class="list-group list-group-flush">
              {{#each info.symptoms}}
              <li class="list-group-item list-group-item-light">{{this}}</li>
              {{/each}}

            </ul>


          </div>

        </div>
      </div>
    </div>
  </div>
</section>