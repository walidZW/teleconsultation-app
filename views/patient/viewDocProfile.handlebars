<!-- navbar -->
{{> _patientNav}}
<!-- end of navbar -->

<!-- patient table -->
<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 col-lg-9 col-md-8 ml-auto mt-4">
        <div class="pt-md-5 mt-md-3 mb-5 col-xl-12">
          <div class="fixed-top">
             {{> _message}}
          </div>

         <div class="container">
          <div class="text-right mb-3"><button type="button" id="friendRequest" class="btn btn-info"><i class="fas fa-user-plus mr-1"></i>Add To Contact</button></div>
          <input type="hidden" id="receiver_name" value="{{doctor.userName}}">
          <input type="hidden" id="sender_name" value="{{userName}}">
          <input type="hidden" id="receiver_id" value="{{doctor._id}}">
          <input type="hidden" id="sender_id" value="{{id}}">
        </div>
        <!-- <div class="col-12 rounded"  style="border:1px solid grey;"> -->
          <!-- Doc Card start -->

          <div class="row d-flex">
            <div class="col-xl-4 col-lg-4 col-md-12 text-center pl-0">
              <div class="card_profile">
                {{#if doctor.profileImage}}
                <img src="/uploads/{{doctor.profileImage}}" alt="John" width="100">
                {{else}}
                <img src="/images/docNew.jpg" alt="John" width="100">
                {{/if}}
                <h2>{{doctor.name}}</h2>
                <p>{{doctor.education}}</p>
                <a href="#"><i class="fab fa-facebook-f mr-1 fa-lg"></i></a>
                <a href="#"><i class="fab fa-linkedin-in ml-1 fa-lg"></i></a>
                <!-- <p>
                  <a href="#">
                    <button class="button_prof">Button</button>
                  </a>
                </p> -->
              </div>
            </div>
            <div div class="col-xl-8 col-lg-8 col-md-12 text-center pl-0">
              <div class="row profile_info m-2">
                <div class="col-6 plabel">Name:</div>
                <div class="col-6 bg-light">{{doctor.name}}</div>
              </div>
              <div class="row profile_info m-2">
                <div class="col-6 plabel">Education:</div>
                <div class="col-6 bg-light">{{doctor.education}}</div>
              </div>
              <div class="row profile_info m-2">
                <div class="col-6 plabel">Speciality:</div>
                <div class="col-6 bg-light">{{doctor.speciality}}</div>
              </div>
              <div class="row profile_info m-2">
                <div class="col-6 plabel">Work Experience:</div>
                <div class="col-6 bg-light">{{doctor.experience}}</div>
              </div>
              <div class="row profile_info m-2">
                <div class="col-6 plabel">Email:</div>
                <div class="col-6 bg-light">{{doctor.email}}</div>
              </div>
              <div class="row profile_info m-2">
                <div class="col-6 plabel">Degree:</div>
                <div class="col-6 bg-light">{{doctor.degree}}</div>
              </div>
            </div>
          </div>
          <!-- End doc card-->

          <!-- Doc Schedule start-->
          <div class="row justify-content-center">
            <div class="container">
              <h3 class="text-info font-weight-bold text-center m-3 mt-5">Work Schedule</h3>
            </div>
            <div class="col-12 align-items-center">
              <table class="table table-striped table-dark">
                <thead>
                  <tr>
                    <th scope="col" class="text-center">Day</th>
                    <th scope="col" class="text-center">Start time</th>
                    <th scope="col" class="text-center">End Time</th>
                    <th scope="col" class="text-center">Appointment</th>
                  </tr>
                </thead>
                <tbody>
                  {{#if schedule.start.[0]}}
                  <tr>
                    <th scope="row" class="text-center">Saturday</th>
                    <td class="text-center">{{schedule.start.[0]}}</td>
                    <td class="text-center">{{schedule.end.[0]}}</td>
                    <td class="text-center">
                      <a href="/patient/{{userName}}/makeAppointment/{{doctor._id}}/{{schedule.day.[0]}}"><button type="button" class="btn btn-primary btn-sm">Book</button></a>
                    </td>

                  </tr>
                  {{/if}}

                  {{#if schedule.start.[1]}}
                  <tr>
                    <th scope="row"class="text-center">Sunday</th>
                    <td class="text-center">{{schedule.start.[1]}}</td>
                    <td class="text-center">{{schedule.end.[1]}}</td>
                    <td class="text-center">
                      <a href="/patient/{{userName}}/makeAppointment/{{doctor._id}}/{{schedule.day.[1]}}"><button type="button" class="btn btn-primary btn-sm">Book</button></a>
                    </td>

                  </tr>
                  {{/if}}

                  {{#if schedule.start.[2]}}
                  <tr>
                    <th scope="row" class="text-center">Monday</th>
                    <td class="text-center">{{schedule.start.[2]}}</td>
                    <td class="text-center">{{schedule.end.[2]}}</td>
                    <td class="text-center">
                      <a href="/patient/{{userName}}/makeAppointment/{{doctor._id}}/{{schedule.day.[2]}}"><button type="button" class="btn btn-primary btn-sm">Book</button></a>
                    </td>

                  </tr>
                  {{/if}}

                  {{#if schedule.start.[3]}}
                  <tr>
                    <th scope="row" class="text-center">Tuesday</th>
                    <td class="text-center">{{schedule.start.[3]}}</td>
                    <td class="text-center">{{schedule.end.[3]}}</td>
                    <td class="text-center">
                      <a href="/patient/{{userName}}/makeAppointment/{{doctor._id}}/{{schedule.day.[3]}}"><button type="button" class="btn btn-primary btn-sm">Book</button></a>
                    </td>
                  </tr>
                  {{/if}}

                  {{#if schedule.start.[4]}}
                  <tr>
                    <th scope="row" class="text-center">Wednesday</th>
                    <td class="text-center">{{schedule.start.[4]}}</td>
                    <td class="text-center">{{schedule.end.[4]}}</td>
                    <td class="text-center">
                      <a href="/patient/{{userName}}/makeAppointment/{{doctor._id}}/{{schedule.day.[4]}}"><button type="button" class="btn btn-primary btn-sm">Book</button></a>
                    </td>
                  </tr>
                  {{/if}}

                  {{#if schedule.start.[5]}}
                  <tr>
                    <th scope="row" class="text-center">Thurday</th>
                    <td class="text-center">{{schedule.start.[5]}}</td>
                    <td class="text-center">{{schedule.end.[5]}}</td>
                    <td class="text-center">
                      <a href="/patient/{{userName}}/makeAppointment/{{doctor._id}}/{{schedule.day.[5]}}"><button type="button" class="btn btn-primary btn-sm">Book</button></a>
                    </td>
                  </tr>
                  {{/if}}

                  {{#if schedule.start.[6]}}
                  <tr>
                    <th scope="row"class="text-center">Friday</th>
                    <td class="text-center">{{schedule.start.[6]}}</td>
                    <td class="text-center">{{schedule.end.[6]}}</td>
                    <td class="text-center">
                      <a href="/patient/{{userName}}/makeAppointment/{{doctor._id}}/{{schedule.day.[6]}}"><button type="button" class="btn btn-primary btn-sm">Book</button></a>
                    </td>
                  </tr>
                  {{/if}}
                </tbody>
              </table>

            </div>
          </div>
          <!-- doc schedule end -->


          <!-- </div> -->
        </div>
      </div>
    </div>
  </div>
</section>
<!-- end of table -->
